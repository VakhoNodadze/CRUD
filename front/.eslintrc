{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "camelcase": 0,
    "max-len": [
      "warn",
      100
    ],
    "comma-dangle": ["error", "never"],
    "indent": [
      "warn",
      2
    ],
    "no-confusing-arrow": "warn",
    "no-empty-function": "error",
    "no-lone-blocks": "error",
    "no-multi-spaces": "warn",
    "no-underscore-dangle": "warn",
    "no-dupe-else-if": "warn",
    "arrow-parens": "warn",
    "default-param-last": "error",
    "default-case": "error",
    "curly": "error",
    "complexity": ["error", 20],
    "semi": 1
  }
}
